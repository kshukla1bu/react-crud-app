const api = 'https://cntct-bfc7.restdb.io/rest/contacts'

const headers = {
  'cache-control': 'no-cache',
  'x-apikey': '492b6b581a9ec6fdfe2be17dc3782bea8c9df',
  'Access-Control-Allow-Origin': 'http://localhost:3000'
}

export const getAll = () =>
  fetch(`${api}`, { headers })
    .then(res => res.json())
    .then(data => data.contacts).then(res => console.log(res))

export const remove = (contact) =>
  fetch(`${api}/contacts/${contact.id}`, { method: 'DELETE', headers })
    .then(res => res.json())
    .then(data => data.contact)

export const create = (body) =>
  fetch(`${api}/contacts`, {
    method: 'POST',
    headers: {
      ...headers,
      'Content-Type': 'application/json'
    },
    body: JSON.stringify(body)
  }).then(res => res.json())
